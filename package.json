{
  "name": "list-code-usages-csharp",
  "displayName": "C# Code Usages Finder",
  "description": "Find all usages of C# symbols with GitHub Copilot integration",
  "version": "0.1.10",
  "publisher": "seungyongshim",
  "repository": {
    "type": "git",
    "url": "https://github.com/seungyongshim/ListCodeUsageForCSharpV1.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "list_code_usages_csharp.findUsages",
        "title": "Find C# Code Usages"
      }
    ],
    "languageModelTools": [
      {
        "name": "find_csharp_usages",
        "displayName": "Find C# Code Usages",
        "modelDescription": "Find all usages of a C# symbol (class, method, property, etc.) in the workspace. Searches for references across all C# files.",
        "toolReferenceName": "find_csharp_usages",
        "userDescription": "Searches for all usages of a C# symbol in your workspace",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "symbolName": {
              "type": "string",
              "description": "The name of the C# symbol to find usages for (e.g., class name, method name, property name)"
            },
            "filePaths": {
              "type": "array",
              "description": "Optional: Absolute paths to C# files where the symbol might be defined",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["symbolName"]
        }
      }
    ],
    "configuration": {
      "title": "C# Code Usages",
      "properties": {
        "csharpCodeUsages.enableCache": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching for symbol positions"
        },
        "csharpCodeUsages.searchStrategies": {
          "type": "array",
          "default": [
            "workspace",
            "document",
            "text"
          ],
          "description": "Search strategies to use (in order)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-bundle",
    "compile": "npm run build",
    "watch": "npm run watch-bundle",
    "package": "vsce package",
    "build": "node esbuild.js",
    "watch-bundle": "node esbuild.js --watch",
    "package-bundle": "node esbuild.js --production"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.11",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
