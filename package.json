{
  "name": "list-code-usages-csharp",
  "displayName": "C# Code Usages Finder",
  "description": "Find all usages of C# symbols with GitHub Copilot integration via MCP",
  "version": "0.1.4",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/seungyongshim/ListCodeUsageForCSharpV1.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "list_code_usages_csharp.findUsages",
        "title": "Find C# Code Usages"
      }
    ],
    "configuration": {
      "title": "C# Code Usages",
      "properties": {
        "csharpCodeUsages.enableCache": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching for symbol positions"
        },
        "csharpCodeUsages.searchStrategies": {
          "type": "array",
          "default": [
            "workspace",
            "document",
            "text"
          ],
          "description": "Search strategies to use (in order)"
        },
        "csharpCodeUsages.enableMcpServer": {
          "type": "boolean",
          "default": true,
          "description": "Enable MCP server for GitHub Copilot integration"
        }
      }
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "csharp-code-usages",
        "label": "C# Code Usages MCP Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package-bundle",
    "compile": "npm run build",
    "watch": "npm run watch-bundle",
    "package": "vsce package",
    "build": "node esbuild.js",
    "watch-bundle": "node esbuild.js --watch",
    "package-bundle": "node esbuild.js --production"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.11",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
